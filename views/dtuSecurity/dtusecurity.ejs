            // document.querySelectorAll(".table-item-found")[0].style.display ="none";              
        }
        function toggleFoundTable () {
            $(".table-item-lost").fadeOut(200,function()
            {
                $(".table-item-found").fadeIn(100);
            });    
            

        }
    </script>
        
