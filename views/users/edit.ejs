<% include ../partials/header %>

<div class="container">
    <div class="row ">
        <div class="thumbnail login-padding">
            <h1 style="text-align:center;"> Edit User Profile of <em> <%=user.username%> - <%=user.firstname + " "+user.lastname%> </em> </h1>
            <div style="width:50%; margin: 25px auto">
                <form action="/users/<%=user._id%>?_method=PUT" method="POST">
                    <div class="form-group">
                        <label for="username">Username*</label>
                        <input class="form-control" id="username" type="text" name="editedUser[username]" required value="<%=user.username%>" placeholder="username*">
                    </div>
                    <div class="form-group">
                        <label for="password">Password*</label>
                        <input class="form-control"  id="password" type="password" name="editedUser[password]" required placeholder="Password*">
                    </div>
                    <div class="form-group">
                        <label for="firstname">Firstname</label>
                        <input class="form-control" id="firstname" type="text" name="editedUser[firstName]" value="<%=user.firstName%>" placeholder="firstname">
                    </div>
                    <div class="form-group">
                        <label for="lastname">Lastname</label>
                        <input class="form-control" id="lastname" type="text" name="editedUser[lastName]" value="<%=user.lastName%>" placeholder="lastname">
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input class="form-control" id="email" type="email" name="editedUser[email]"value="<%=user.email%>" placeholder="email">
                    </div>
                    <div class="form-group">
                        <label for="avatar">Avatar</label>
                        <input class="form-control" id="avatar" type="text" name="editedUser[avatar]" value="<%=user.avatar%>" placeholder="avatar url">
                    </div>
                    <div class="form-group">
                        <label for="admin-secret">Retype Admin Secret Key</label>
                        <input class="form-control" id="admin-secret" type="password" name="editedUser[adminKey]" placeholder="admin secret key">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit</button>
                    </div>
                    
                </form>
                <br>
                <a href="/items">Go back</a>
            </div>
        </div>
        
    </div>
    
</div>

<% include ../partials/footer %>
